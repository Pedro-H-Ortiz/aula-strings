const tarefas = []
tarefas.push(prompt ("qual a primeira tarefa que voce faz em casa?"));
tarefas.push(prompt ("qual a segunda tarefa que voce faz em casa?"));
tarefas.push(prompt ("qual a terceira tarefa que voce faz em casa?"));

console.log("0 - ", tarefas[0]);
console.log("1 - ", tarefas[1]);
console.log("2 - ", tarefas[2]);
let completo =  Number(prompt ("qual a tarefa completa?"));
tarefas.splice(completo, 1);

console.log(tarefas);
